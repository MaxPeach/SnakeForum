@model IEnumerable<SnakeForm.Models.Discussion>

@{
    ViewData["Title"] = "Index";
}

<h1>Discussions</h1>
<hr />

<div class="row">
    @foreach (var discussion in Model)
    {
        <div class="col-md-12 mb-3">
            <div class="card">
                <div class="row no-gutters">
                    <!-- Image Thumbnail -->
                    <div class="col-md-2">
                        <img src="~/uploads/@discussion.ImageFilename" class="img-thumbnail" alt="Discussion Image" width="100" height="100">
                    </div>

                    <!-- Discussion Details -->
                    <div class="col-md-10">
                        <div class="card-body">
                            <!-- Clickable Title -->
                            <h5 class="card-title">
                                <a asp-action="GetDiscussion" asp-route-id="@discussion.DiscussionId">@discussion.Title</a>
                            </h5>
                            
                            <p class="card-text">
                                <small class="text-muted">
                                    Created on: @discussion.CreateDate.ToString("MMMM dd, yyyy HH:mm")
                                </small>
                            </p>

                            <p class="card-text">
                                <strong>@discussion.Comments?.Count() comments</strong>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>