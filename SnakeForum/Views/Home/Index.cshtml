@model List<SnakeForm.Models.Discussion>

@{
    ViewData["Title"] = "Home";
}

<h1>Discussions</h1>
<hr />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-12 mb-3">
            <div class="card">
                <div class="row no-gutters">
                    <!-- Image Thumbnail -->
                    <div class="col-md-2">
                        <td>
                        <img src="/images/@item.ImageFilename" alt="@item.Content" class="img-thumbnail">
                        </td>
                    </div>

                    <!-- Discussion Details -->
                    <div class="col-md-10">
                        <div class="card-body">
                            <!-- Clickable Title -->
                            <h5 class="card-title">
                                <a asp-action="GetDiscussion" asp-route-id="@item.DiscussionId">@item.Title</a>
                            </h5>
                            
                            <p class="card-text">
                                <small class="text-muted">
                                    Created on: @item.CreateDate.ToString("MMMM dd, yyyy HH:mm")
                                </small>
                            </p>

                            <p class="card-text">
                                <strong>@item.Comments?.Count() comments</strong>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
